    <script>
        const apiKey = "";
        let currentMode = '1';
        let imagesData = [null, null, null];

        const uploadGrid = document.getElementById('upload-grid');
        const mode1Btn = document.getElementById('mode-1');
        const mode3Btn = document.getElementById('mode-3');
        const analyzeBtn = document.getElementById('analyze-btn');
        const loader = document.getElementById('loader');
        const results = document.getElementById('results');

        function createUploadSlots() {
            uploadGrid.innerHTML = '';
            const slots = currentMode === '1' ? 1 : 3;
            for (let i = 0; i < slots; i++) {
                const div = document.createElement('div');
                div.className = "relative border-2 border-dashed border-slate-700 rounded-xl h-24 flex flex-col items-center justify-center cursor-pointer hover:border-blue-500 bg-slate-900/40 overflow-hidden";
                div.onclick = () => document.getElementById(`input-${i}`).click();
                div.innerHTML = `
                    <input type="file" id="input-${i}" class="hidden" accept="image/*" onchange="handleFile(this, ${i})">
                    <div id="info-${i}" class="text-center">
                        <i class="fas fa-plus text-lg text-slate-600 mb-1"></i>
                        <p class="text-[9px] text-slate-500 font-bold uppercase font-title">${currentMode === '3' ? (i==0?'Big TF':(i==1?'Mid TF':'Entry TF')) : 'Upload Chart'}</p>
                    </div>
                    <img id="pv-${i}" class="hidden absolute inset-0 w-full h-full object-contain bg-black">
                `;
                uploadGrid.appendChild(div);
            }
        }

        window.handleFile = (input, idx) => {
            const file = input.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    imagesData[idx] = e.target.result.split(',')[1];
                    document.getElementById(`pv-${idx}`).src = e.target.result;
                    document.getElementById(`pv-${idx}`).classList.remove('hidden');
                    document.getElementById(`info-${idx}`).classList.add('hidden');
                };
                reader.readAsDataURL(file);
            }
        };

        mode1Btn.onclick = () => {
            currentMode = '1';
            mode1Btn.classList.add('border-blue-500', 'bg-blue-500/10', 'opacity-100');
            mode3Btn.classList.remove('border-blue-500', 'bg-blue-500/10', 'opacity-100');
            mode3Btn.classList.add('opacity-60', 'border-transparent');
            imagesData = [null, null, null];
            createUploadSlots();
        };

        mode3Btn.onclick = () => {
            currentMode = '3';
            mode3Btn.classList.add('border-blue-500', 'bg-blue-500/10', 'opacity-100');
            mode1Btn.classList.remove('border-blue-500', 'bg-blue-500/10', 'opacity-100');
            mode1Btn.classList.add('opacity-60', 'border-transparent');
            imagesData = [null, null, null];
            createUploadSlots();
        };

        analyzeBtn.onclick = async () => {
            const activeImgs = imagesData.filter(img => img !== null);
            if (currentMode === '1' && activeImgs.length < 1) return;
            if (currentMode === '3' && activeImgs.length < 3) return;

            loader.classList.remove('hidden');
            results.classList.add('hidden');
            analyzeBtn.disabled = true;

            const prompt = `Daytrade Expert: วิเคราะห์ภาพกราฟนี้ (Price Action & Candle): 
            1.ระบุชื่อ/ราคา 
            2.วิเคราะห์ทิศทางจากแท่งเทียนและเทรนด์ไลน์ 
            3.คำนวณโอกาสถึง TP (%) โดยเทียบกับแนว Fibonacci ที่เป็นไปได้ในกราฟ 
            4.สรุป Entry, TP, SL ให้คมที่สุด 
            ตอบเป็น JSON ภาษาไทย: {asset, price, signal, entry, tp, sl, probability, logic}`;

            const payloadParts = [{ text: prompt }];
            activeImgs.forEach(b => payloadParts.push({ inlineData: { mimeType: "image/png", data: b } }));

            try {
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        contents: [{ parts: payloadParts }],
                        generationConfig: { 
                            responseMimeType: "application/json",
                            responseSchema: {
                                type: "OBJECT",
                                properties: {
                                    asset: { type: "string" }, price: { type: "string" }, signal: { type: "string" },
                                    entry: { type: "string" }, tp: { type: "string" }, sl: { type: "string" },
                                    probability: { type: "string" }, logic: { type: "string" }
                                }
                            }
                        }
                    })
                });

                const data = await response.json();
                const out = JSON.parse(data.candidates[0].content.parts[0].text);

                document.getElementById('res-asset').innerText = out.asset;
                document.getElementById('res-prob').innerText = (out.probability || "0") + " PROB.";
                document.getElementById('res-price').innerText = out.price;
                document.getElementById('res-signal').innerText = out.signal;
                
                const isBuy = out.signal.toLowerCase().includes('buy');
                document.getElementById('res-signal').style.color = isBuy ? '#10b981' : '#f43f5e';
                document.getElementById('signal-card').style.borderLeftColor = isBuy ? '#10b981' : '#f43f5e';

                document.getElementById('res-entry').innerText = out.entry;
                document.getElementById('res-tp').innerText = out.tp;
                document.getElementById('res-sl').innerText = out.sl;
                
                document.getElementById('res-logic').innerHTML = out.logic.split('\n').map(l => `<p>• ${l}</p>`).join('');

                results.classList.remove('hidden');
            } catch (err) {
                // fail silently or simple message
            } finally {
                loader.classList.add('hidden');
                analyzeBtn.disabled = false;
            }
        };

        createUploadSlots();
    </script>
</body>
</html>
